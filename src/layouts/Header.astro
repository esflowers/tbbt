---
import { site, creator, bmc, provider, wiki } from '../data';
import Button from '../components/Button.astro';
import IconAtom from '../components/icons/IconAtom.astro'
---

<header class="mb-16 relative flex items-center justify-between gap-5">
    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-3 md:gap-4 xl:gap-6">
        <Button text={wiki.title} link={wiki.link} type="sm" target='_blank' title={wiki.label} />
        <Button text={provider.title} link={provider.link} type="sm" target='_blank' title={provider.label} />
    </div>
    <a href={site.link} class="absolute left-1/2 -translate-x-1/2 text-white transition duration-200 hover:rotate-[360deg]">
        <IconAtom size="20" />
    </a>
    <div class="flex flex-col sm:flex-row items-end sm:items-center justify-end gap-2 sm:gap-3 md:gap-4 xl:gap-6">
        <Button text={bmc.title} link={bmc.link} type="sm" target='_blank' title={bmc.label} />
        <Button text={creator.title} link={creator.link} type="sm" target='_blank' title={creator.label} className='font-mono italic hover:text-[#00e17c]!' />
    </div>
</header>